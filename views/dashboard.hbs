<h5>Dashboard</h5>
<h3>Welcome {{name}} </h3>

<p>Here are the stories you have shared</p>
{{#if stories}}
<table class="highlight">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date:</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/edit/{{_id}}" style="color:wheat;"><b>{{title}}</b></a></td>
            <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
            <td><span class="dash-status">{{status}}</span></td>
            <td>
                <a href="/stories/edit/{{_id}}" class="btn btn-float">
                    <i class="fas fa-edit"></i></a>
                <form action="/stories/{{_id}}" method="POST" id="delete_form">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn red" type="submit">
                        <i class="fas fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created any stories yet.</p>
{{/if}}